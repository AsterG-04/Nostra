<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pin_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter PIN to UNLOCK NOTE"
        android:textColor="@color/borderColor"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etPinInput"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:hint="Enter PIN"
        android:textColorHint="@color/borderColor"
        android:textColor="@color/borderColor"
        android:backgroundTint="@color/menuBackground"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnUnlockNote"
        android:text="Unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/borderColor"
        android:textSize="24sp" />


</LinearLayout>
