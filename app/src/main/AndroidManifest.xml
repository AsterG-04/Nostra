        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.COS211Assignment"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
       android:name=".activities.LoadingActivity"

        android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".activities.MainActivity3" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity2" android:exported="true" />

        <activity android:name=".activities.PinActivity" android:exported="true" android:windowSoftInputMode="adjustResize" />
